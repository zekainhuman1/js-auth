{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>
    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>
        <div class="form">
            <div class="form__item">
                {{> field action="signupForm.change" label="Ел. адреса" placeholder="Ваш email" type="email"
                name="email" }}
                <span name="email" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password action="signupForm.change" label="Пароль" placeholder="Ваш пароль" name="password" }}
                <span name="password" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password action="signupForm.change" label="Пароль ще раз" placeholder="Ваш пароль ще раз"
                name="passwordAgain" }}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-select action="signupForm.change" label="Роль" placeholder="Оберіть роль" list=data.role
                name="role" }}
                <span name="role" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-checkbox action="signupForm.change" label="Ви погоджуєтесь з правилами сервіса"
                name="isConfirm" }}
                <span name="isConfirm" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="signupForm.submit()" type="button" class="button button--disabled">Зареєструватися</button>

        <span class="alert alert--disabled">Error</span>
        <span class="link__prefix">Маєте акаунт? <a href="/login" class="link">Увійти</a></span>

    </form>
</div>

