{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>
    <form class="page__section">
        <h1 class="page__title">Вхід</h1>
        <div class="form">
            <div class="form__item">
                {{> field action="signupForm.change" label="Ел. адреса" placeholder="Ваш email" type="email"
                name="email" }}
                <span name="email" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password action="signupForm.change" label="Пароль" placeholder="Ваш пароль" name="password" }}
                <span name="password" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="signupForm.submit()" type="button" class="button button--disabled">Вхід</button>

        <span class="alert alert--disabled">Error</span>
        <span class="link__prefix">Забули пароль? <a href="/recovery" class="link">Відновити</a></span>
    </form>
</div>

