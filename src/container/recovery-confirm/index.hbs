{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>
    <form class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>
        <div class="form">
            <div class="form__item">
                {{> field action="recoveryConfirmForm.change" label="Код" placeholder="Ваш код" type="number"
                name="code" }}
                <span name="code" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль" placeholder="Ваш пароль"
                name="password" }}
                <span name="password" class="form__error">Помилка</span>
            </div>


            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль ще раз"
                name="passwordAgain" placeholder="Ваш пароль ще раз" }}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>

        </div>

        <button onclick="recoveryConfirmForm.submit()" type="button" class="button button--disabled">Змінити
            пароль</button>

        <span class="alert alert--disabled">Error</span>
    </form>
</div>

